<odoo>
    <record id="view_academic_report_wizard_form" model="ir.ui.view">
        <field name="name">academic.report.wizard.form</field>
        <field name="model">academic.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="department_id"/>
                    <field name="academic_year"/>
                    <field name="report_type"/>
                </group>
                <footer>
                    <button name="action_generate_pdf" string="Generate PDF" type="object" class="btn-primary"/>
                    <button name="action_export_excel" string="Export Excel" type="object"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

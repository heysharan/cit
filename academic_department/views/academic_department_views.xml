<odoo>
    <!-- List view -->
    <record id="view_academic_department_list" model="ir.ui.view">
        <field name="name">academic.department.list</field>
        <field name="model">academic.department</field>
        <field name="arch" type="xml">
            <list string="Academic Departments">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_academic_department_form" model="ir.ui.view">
        <field name="name">academic.department.form</field>
        <field name="model">academic.department</field>
        <field name="arch" type="xml">
            <form string="Academic Department">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_academic_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">academic.department</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_academic_department_list"/>
    </record>

    <!-- Menus -->
    <menuitem id="menu_academic_root" name="Academic department"/>
    <menuitem id="menu_academic_department"
              name="Departments"
              parent="menu_academic_root"
              action="action_academic_department"/>
</odoo>

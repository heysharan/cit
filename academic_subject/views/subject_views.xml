<odoo>

    <!-- TREE VIEW -->
    <record id="view_academic_subject_tree" model="ir.ui.view">
        <field name="name">academic.subject.tree</field>
        <field name="model">academic.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="subject_code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="semester"/>
                <field name="subject_type"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_academic_subject_form" model="ir.ui.view">
        <field name="name">academic.subject.form</field>
        <field name="model">academic.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="subject_code"/>
                        <field name="name"/>
                        <field name="department_id"/>
                    </group>
                    <group>
                        <field name="semester"/>
                        <field name="subject_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_academic_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">academic.subject</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_academic_subject_root" name="Subjects management"/>
    <menuitem id="menu_academic_subject"
          name="Subjects"
          parent="menu_academic_subject_root"
          action="action_academic_subject"
          sequence="10"/>

</odoo>

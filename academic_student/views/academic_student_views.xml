<odoo>

    <!-- Root Menu (ONLY if not already created elsewhere) -->
    <menuitem id="menu_academic_root"
              name="student management"
              sequence="10"/>

    <!-- Student Tree View -->
    <record id="view_academic_student_tree" model="ir.ui.view">
        <field name="name">academic.student.tree</field>
        <field name="model">academic.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="roll_no"/>
                <field name="first_name"/>
                <field name="department_id"/>
                <field name="year"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Student Form View -->
    <record id="view_academic_student_form" model="ir.ui.view">
        <field name="name">academic.student.form</field>
        <field name="model">academic.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="roll_no"/>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="department_id"/>
                        <field name="year"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_academic_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">academic.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_academic_student"
              name="Students"
              parent="menu_academic_root"
              action="action_academic_student"
              sequence="40"/>

</odoo>

<odoo>

    <!-- Tree View -->
    <record id="view_academic_placement_tree" model="ir.ui.view">
        <field name="name">academic.placement.list</field>
        <field name="model">academic.placement</field>
        <field name="arch" type="xml">
            <list>
                <field name="placement_id"/>
                <field name="company_name"/>
                <field name="students_attended"/>
                <field name="selected_final"/>
                <field name="avg_salary"/>
                <field name="highest_salary"/>
                <field name="acceptance_rate"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_academic_placement_form" model="ir.ui.view">
        <field name="name">academic.placement.form</field>
        <field name="model">academic.placement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="placement_id"/>
                        <field name="company_name"/>
                    </group>

                    <group string="Selection Details">
                        <field name="students_attended"/>
                        <field name="selected_round1"/>
                        <field name="selected_round2"/>
                        <field name="selected_final"/>
                    </group>

                    <group string="Salary Details">
                        <field name="avg_salary"/>
                        <field name="highest_salary"/>
                        <field name="acceptance_rate" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_academic_placement" model="ir.actions.act_window">
        <field name="name">Placements</field>
        <field name="res_model">academic.placement</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_academic_placement_root"
              name="Placements"
              sequence="30"/>

    <menuitem id="menu_academic_placement"
              name="Placement Records"
              parent="menu_academic_placement_root"
              action="action_academic_placement"/>

</odoo>

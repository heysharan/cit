<odoo>
    <!-- TREE VIEW -->
    <record id="view_academic_attendance_tree" model="ir.ui.view">
        <field name="name">academic.attendance.list</field>
        <field name="model">academic.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="subject_id"/>
                <field name="student_id"/>
                <field name="month"/>
                <field name="hours_present"/>
                <field name="hours_total"/>
                <field name="percentage"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_academic_attendance_form" model="ir.ui.view">
        <field name="name">academic.attendance.form</field>
        <field name="model">academic.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="subject_id"/>
                        <field name="student_id"/>
                        <field name="month"/>
                        <field name="hours_present"/>
                        <field name="hours_total"/>
                        <field name="percentage"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_academic_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">academic.attendance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_academic_attendance"
              name="Attendance"
              parent="academic_student.menu_academic_student"
              action="action_academic_attendance"
              sequence="20"/>
</odoo>

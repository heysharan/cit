<odoo>

    <!-- TREE VIEW -->
    <record id="view_internal_mark_tree" model="ir.ui.view">
        <field name="name">academic.internal.mark.list</field>
        <field name="model">academic.internal.mark</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="year"/>
                <field name="assessment_type"/>
                <field name="marks_obtained"/>
                <field name="test_date"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_internal_mark_form" model="ir.ui.view">
        <field name="name">academic.internal.mark.form</field>
        <field name="model">academic.internal.mark</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                    </group>
                    <group>
                        <field name="year"/>
                        <field name="assessment_type"/>
                    </group>
                    <group>
                        <field name="assignment_or_seminar_mark"/>
                        <field name="marks_obtained"/>
                        <field name="test_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_internal_marks" model="ir.actions.act_window">
        <field name="name">Internal Marks</field>
        <field name="res_model">academic.internal.mark</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem
        id="menu_internal_marks"
        name="Internal Marks"
        parent="academic_student.menu_academic_root"
        action="action_internal_marks"
        sequence="50"/>

</odoo>

<odoo>

    <!-- LIST VIEW -->
    <record id="view_academic_staff_load_tree" model="ir.ui.view">
        <field name="name">academic.staff.load.tree</field>
        <field name="model">academic.staff.load</field>
        <field name="arch" type="xml">
            <list>
                <field name="course_name"/>
                <field name="staff_id"/>
                <field name="hours_per_week"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_academic_staff_load_form" model="ir.ui.view">
        <field name="name">academic.staff.load.form</field>
        <field name="model">academic.staff.load</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="course_name"/>
                        <field name="staff_id"/>
                        <field name="hours_per_week"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_academic_staff_load" model="ir.actions.act_window">
        <field name="name">Teaching Loads</field>
        <field name="res_model">academic.staff.load</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_academic_staff_load"
          name="Teaching Loads"
          action="action_academic_staff_load"/>

</odoo>

<odoo>

    <!-- TREE VIEW -->
    <record id="view_academic_staff_tree" model="ir.ui.view">
        <field name="name">academic.staff.list</field>
        <field name="model">academic.staff</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="first_name"/>
                <field name="designation"/>
                <field name="department_id"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_academic_staff_form" model="ir.ui.view">
        <field name="name">academic.staff.form</field>
        <field name="model">academic.staff</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <field name="photo" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Staff ID"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="designation"/>
                            <field name="department_id"/>
                            <field name="date_of_joining"/>
                            <field name="profile_pdf" filename="profile_pdf_name"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Teaching Load">
                            <field name="load_ids">
                                <list editable="bottom">
                                    <field name="course_name"/>
                                    <field name="hours_per_week"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_academic_staff" model="ir.actions.act_window">
        <field name="name">Staff Members</field>
        <field name="res_model">academic.staff</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENUS -->
    <menuitem id="menu_academic_root" name="staff management"/>
    <menuitem
        id="menu_academic_staff"
        name="Staff"
        parent="menu_academic_root"
        action="action_academic_staff"/>

</odoo>
